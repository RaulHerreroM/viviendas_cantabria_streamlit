# Configuracion de Google Sheets para Streamlit
#
# INSTRUCCIONES:
# 1. Copia este archivo como 'secrets.toml' en el mismo directorio (.streamlit/)
# 2. Rellena los valores con tus credenciales de Google Cloud
# 3. NUNCA subas el archivo secrets.toml al repositorio (ya esta en .gitignore)
#
# Para Streamlit Cloud:
# - Configura estos secretos en el dashboard de Streamlit Cloud
# - Settings > Secrets > Pega el contenido de tu secrets.toml

# Configuracion de Google Sheets
[google_sheets]
# ID del documento de Google Sheets (puedes encontrarlo en la URL)
# https://docs.google.com/spreadsheets/d/TU_SPREADSHEET_ID_AQUI/edit
spreadsheet_id = "TU_SPREADSHEET_ID_AQUI"

# Nombres de las hojas dentro del documento
municipios_sheet_name = "precios_municipios_cantabria"
distritos_sheet_name = "precios_distritos_santander"

# Credenciales de la cuenta de servicio de Google Cloud Platform
# Obtener desde: Google Cloud Console > IAM & Admin > Service Accounts
# Crea una cuenta de servicio, descarga el JSON y pega los valores aqui
[gcp_service_account]
type = "service_account"
project_id = "tu-proyecto-id"
private_key_id = "tu-private-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\nTU_PRIVATE_KEY_AQUI\n-----END PRIVATE KEY-----\n"
client_email = "tu-service-account@tu-proyecto.iam.gserviceaccount.com"
client_id = "tu-client-id"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/tu-service-account%40tu-proyecto.iam.gserviceaccount.com"
