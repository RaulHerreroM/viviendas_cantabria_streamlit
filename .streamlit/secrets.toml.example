# Configuracion de AWS S3 para Streamlit
#
# INSTRUCCIONES:
# 1. Copia este archivo como 'secrets.toml' en el mismo directorio (.streamlit/)
# 2. Rellena los valores con tus credenciales de AWS
# 3. NUNCA subas el archivo secrets.toml al repositorio (ya esta en .gitignore)
#
# Para Streamlit Cloud:
# - Configura estos secretos en el dashboard de Streamlit Cloud
# - Settings > Secrets > Pega el contenido de tu secrets.toml

# Configuracion de AWS S3
[aws]
# Credenciales de AWS (opcional si usas roles IAM o variables de entorno)
# Si ejecutas en EC2/ECS con un rol IAM, no necesitas configurar estas credenciales
aws_access_key_id = "TU_AWS_ACCESS_KEY_ID"
aws_secret_access_key = "TU_AWS_SECRET_ACCESS_KEY"
# Region de AWS donde esta tu bucket S3
aws_region = "eu-west-1"

# Configuracion del bucket S3
[s3]
bucket_name = "viviendas-cantabria-raul"
# Rutas de los archivos en S3
municipios_key = "raw/precios_municipios_cantabria.parquet"
distritos_key = "raw/precios_distritos_santander.parquet"
geojson_key = "raw/municipios_cantabria.geojson"
